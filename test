@app.on_message(filters.command("help"))
def send_help(_, message):
    # WysyÅ‚a wiadomoÅ›Ä‡ z Inline Keyboard
    message.reply_text("Wybierz jednÄ… z opcji:", reply_markup=inline_keyboard)

@app.on_message(filters.command("start"))
def send_welcome(_, message):
    message.reply_text("Witaj! Wybierz jeden z przyciskÃ³w.", reply_markup=reply_keyboard)

app.run()  # Uruchamia bota

@app.on_message(filters.command("contact"))
